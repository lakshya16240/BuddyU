<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@color/colorAccent">

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_action_add_event" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="User Name"
                    android:paddingBottom="15dp" />

                <TextView
                    android:id="@+id/event_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Events 0" />

            </LinearLayout>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/editProfile"
                android:src="@drawable/ic_action_edit_button"
                android:backgroundTint="@color/colorAccent"/>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/GridLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:rowCount="2"
                    android:padding= "10dp"
                    android:orientation="horizontal"
                    tools:context=".GridXMLActivity" >

                    <Button
                        android:id="@+id/Cricket"
                        android:layout_margin="10dp"
                        android:layout_height="35dp"
                        android:tag="0"
                        android:layout_gravity="start|top"
                        android:background="@drawable/my_chip"
                        android:onClick="onChipClick"
                        android:text="Cricket" />

                    <Button
                        android:id="@+id/BaseBall"
                        android:layout_margin="10dp"
                        android:layout_height="35dp"
                        android:tag="0"
                        android:layout_gravity="start|top"
                        android:onClick="onChipClick"
                        android:background="@drawable/my_chip"
                        android:text="BaseBall" />

                    <Button
                        android:id="@+id/Badminton"
                        android:layout_margin="10dp"
                        android:tag="0"
                        android:layout_height="35dp"
                        android:layout_gravity="start|top"
                        android:onClick="onChipClick"
                        android:background="@drawable/my_chip"
                        android:text="Badminton" />

                    <Button
                        android:id="@+id/Tennis"
                        android:layout_margin="10dp"
                        android:tag="0"
                        android:layout_height="35dp"
                        android:layout_gravity="start|top"
                        android:onClick="onChipClick"
                        android:background="@drawable/my_chip"
                        android:text="Tennis" />

                </GridLayout>

                <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/GridLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:rowCount="2"
                    android:padding= "10dp"
                    android:orientation="horizontal"
                    tools:context=".GridXMLActivity" >

                    <Button
                        android:id="@+id/Horror"
                        android:layout_margin="10dp"
                        android:layout_height="35dp"
                        android:tag="0"
                        android:layout_gravity="start|top"
                        android:background="@drawable/my_chip"
                        android:onClick="onChipClick"
                        android:text="Horror" />

                    <Button
                        android:id="@+id/Comedy"
                        android:layout_margin="10dp"
                        android:layout_height="35dp"
                        android:tag="0"
                        android:layout_gravity="start|top"
                        android:onClick="onChipClick"
                        android:background="@drawable/my_chip"
                        android:text="Comedy" />

                    <Button
                        android:id="@+id/Drama"
                        android:layout_margin="10dp"
                        android:tag="0"
                        android:layout_height="35dp"
                        android:layout_gravity="start|top"
                        android:onClick="onChipClick"
                        android:background="@drawable/my_chip"
                        android:text="Drama" />

                    <Button
                        android:id="@+id/Cartoon"
                        android:layout_margin="10dp"
                        android:tag="0"
                        android:layout_height="35dp"
                        android:layout_gravity="start|top"
                        android:onClick="onChipClick"
                        android:background="@drawable/my_chip"
                        android:text="Cartoon" />

                    <Button
                        android:id="@+id/SciFi"
                        android:layout_margin="10dp"
                        android:tag="0"
                        android:layout_height="35dp"
                        android:layout_gravity="start|top"
                        android:onClick="onChipClick"
                        android:background="@drawable/my_chip"
                        android:text="SciFi" />

                </GridLayout>

                <Button
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:id="@+id/saveProfile"
                    android:text="Save"
                    android:background="@color/colorPrimary" />
            </LinearLayout>











        </ScrollView>

    </LinearLayout>

    <Button
        android:id="@+id/Logout"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="0dp"
        android:text="@string/logout"
        android:background="@color/colorPrimaryDark"
        android:layout_weight="1"
        android:textStyle="bold"/>

</LinearLayout>