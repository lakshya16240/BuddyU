<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".LoginActivity"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">


        <ProgressBar
            android:id="@+id/signup_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="20dp"
            android:visibility="gone" />

        <ImageView
            android:layout_weight="4"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/buddyu" />
        <!--android:padding="16dp"-->


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/username"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Username"
                android:inputType="textEmailAddress"

                android:maxLines="1"
                android:padding="8dp"
                android:textColor="#000000"
                android:textColorHint="#D3D3D3" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/password"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#D3D3D3" />

            <TextView
                android:id="@+id/feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:visibility="gone"
                android:text="" />


            <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/GridLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="2"
                android:padding= "10dp"
                android:orientation="horizontal"
                tools:context=".GridXMLActivity" >

                <Button
                    android:id="@+id/Cricket"
                    android:layout_margin="10dp"
                    android:layout_height="35dp"
                    android:tag="0"
                    android:layout_gravity="start|top"
                    android:background="@drawable/my_chip"
                    android:onClick="onChipClick"
                    android:text="Cricket" />

                <Button
                    android:id="@+id/BaseBall"
                    android:layout_margin="10dp"
                    android:layout_height="35dp"
                    android:tag="0"
                    android:layout_gravity="start|top"
                    android:onClick="onChipClick"
                    android:background="@drawable/my_chip"
                    android:text="BaseBall" />

                <Button
                    android:id="@+id/Badminton"
                    android:layout_margin="10dp"
                    android:tag="0"
                    android:layout_height="35dp"
                    android:layout_gravity="start|top"
                    android:onClick="onChipClick"
                    android:background="@drawable/my_chip"
                    android:text="Badminton" />

                <Button
                    android:id="@+id/Tennis"
                    android:layout_margin="10dp"
                    android:tag="0"
                    android:layout_height="35dp"
                    android:layout_gravity="start|top"
                    android:onClick="onChipClick"
                    android:background="@drawable/my_chip"
                    android:text="Tennis" />

                <Button
                    android:id="@+id/Swimming"
                    android:layout_margin="10dp"
                    android:tag="0"
                    android:layout_height="35dp"
                    android:layout_gravity="start|top"
                    android:onClick="onChipClick"
                    android:background="@drawable/my_chip"
                    android:text="Swimming" />

                <Button
                    android:id="@+id/Volleyball"
                    android:layout_margin="10dp"
                    android:tag="0"
                    android:layout_height="35dp"
                    android:layout_gravity="start|top"
                    android:onClick="onChipClick"
                    android:background="@drawable/my_chip"
                    android:text="Volleyball" />

            </GridLayout>


            <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/GridLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="2"
                android:padding="10dp"
                android:orientation="horizontal"
                tools:context=".GridXMLActivity" >

                <Button
                    android:id="@+id/Horror"
                    android:layout_margin="10dp"
                    android:layout_height="35dp"
                    android:tag="0"
                    android:layout_gravity="start|top"
                    android:background="@drawable/my_chip"
                    android:onClick="onChipClick"
                    android:text="Horror" />

                <Button
                    android:id="@+id/Comedy"
                    android:layout_margin="10dp"
                    android:layout_height="35dp"
                    android:tag="0"
                    android:layout_gravity="start|top"
                    android:onClick="onChipClick"
                    android:background="@drawable/my_chip"
                    android:text="Comedy" />

                <Button
                    android:id="@+id/Drama"
                    android:layout_margin="10dp"
                    android:tag="0"
                    android:layout_height="35dp"
                    android:layout_gravity="start|top"
                    android:onClick="onChipClick"
                    android:background="@drawable/my_chip"
                    android:text="Drama" />

                <Button
                    android:id="@+id/Cartoon"
                    android:layout_margin="10dp"
                    android:tag="0"
                    android:layout_height="35dp"
                    android:layout_gravity="start|top"
                    android:onClick="onChipClick"
                    android:background="@drawable/my_chip"
                    android:text="Cartoon" />

                <Button
                    android:id="@+id/SciFi"
                    android:layout_margin="10dp"
                    android:tag="0"
                    android:layout_height="35dp"
                    android:layout_gravity="start|top"
                    android:onClick="onChipClick"
                    android:background="@drawable/my_chip"
                    android:text="SciFi" />

            </GridLayout>

            <Button
                android:id="@+id/email_sign_up_button"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:background="@drawable/background_signup"
                android:clickable="true"
                android:text="Sign up"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp"
                android:onClick="onRegister"
                />






        </LinearLayout>


    </LinearLayout>
</ScrollView>